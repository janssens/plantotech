<form method="post" action="{{ path('property_attribute_delete', {'id': propertyOrAttribute.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ propertyOrAttribute.id) }}">
    <button class="btn btn--danger"><i class="mdi mdi-trash-can"></i>Supprimer</button>
</form>
